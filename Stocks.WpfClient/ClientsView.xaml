<UserControl x:Class="Stocks.WpfClient.ClientsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Stocks.WpfClient"
             xmlns:converters="clr-namespace:Stocks.WpfClient.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="800">
    <UserControl.Resources>
        <converters:NullToHiddenConverter x:Key="NullToHiddenConverter" />
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <TextBlock
                VerticalAlignment="Bottom" Margin="4,4,4,2"
                Text="Name" />
            <TextBox
                Grid.Row="1"
                x:Name="NameCriterion"
                />
            <Button
                Grid.Column="2" x:Name="SearchButton"
                Grid.RowSpan="2"
                HorizontalAlignment="Right"
                Margin="4"
                Padding="6" Click="SearchButton_Click">
                Search
            </Button>
        </Grid>
        <ListBox
            Grid.Row="1" Margin="4"
            x:Name="ResultsListBox"
            IsSynchronizedWithCurrentItem="True"
            HorizontalContentAlignment="Stretch">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock
                        Text="{Binding Path=FirstLastName}" />
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <StackPanel 
            Grid.Row="2" Orientation="Horizontal"
            HorizontalAlignment="Right">
            <Button
                x:Name="AddButton"
                MinWidth="75" Click="AddButton_Click">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Margin="4">Add</TextBlock>
                </StackPanel>
            </Button>
            <Button
                x:Name="DeleteButton"
                MinWidth="75" Click="DeleteButton_Click">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Margin="4">Delete</TextBlock>
                </StackPanel>
            </Button>
        </StackPanel>
        <local:ClientView 
            Grid.Row="1" Grid.Column="1"
            DataContext="{Binding ElementName=ResultsListBox, Path=SelectedItem}"
            Visibility="{Binding ElementName=ResultsListBox, Path=SelectedItem, 
            Converter={StaticResource NullToHiddenConverter}}"/>
        <StackPanel
            Grid.Row="2" Grid.Column="1"
            Margin="0,0,0,0"
            HorizontalAlignment="Right"
            Orientation="Horizontal"
            DataContext="{Binding ElementName=ResultsListBox, Path=SelectedItem}"
            Visibility="{Binding ElementName=ResultsListBox, Path=SelectedItem, 
            Converter={StaticResource NullToHiddenConverter}}">
            <Button
                x:Name="SaveButton"
                MinWidth="75"
                IsDefault="True"
                IsEnabled="{Binding ElementName=ResultsListBox,Path=SelectedItem.IsGraphDirty}" Click="SaveButton_Click">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Margin="4">Save</TextBlock>
                </StackPanel>
            </Button>
            <Button
                x:Name="CancelButton"
                MinWidth="75"
                IsCancel="True"
                IsEnabled="{Binding ElementName=ResultsListBox,Path=SelectedItem.IsGraphDirty}" Click="CancelButton_Click">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Margin="4">Cancel</TextBlock>
                </StackPanel>
            </Button>
        </StackPanel>
    </Grid>
</UserControl>
